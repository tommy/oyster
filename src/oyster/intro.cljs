(ns oyster.intro
  (:require [oyster.dom :as dom]
            [dommy.core :as dommy]
            [cljs.core.async :as async :refer [timeout]])
  (:use-macros [dommy.macros :only [node]]
               [cljs.core.async.macros :only [<! go]]))

(defn anim-frame
  [el]
  (node [:div#anim-frame el]))

(defn render-frame!
  [el]
  (dommy/replace-contents! (dom/by-id :content) (anim-frame el)))

(defn animate!
  [els frame-rate]
  (let [wait-time (/ 1000 frame-rate)]
    (go (doseq [el els]
          (render-frame! el)
          (<! (timeout wait-time))))))

(defn oyster [font-size]
  (let [line-height (/ font-size 2)]
    [:pre {:style (str "font: " font-size "px/" line-height "px monospace;")}
